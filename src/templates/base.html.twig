<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                    <div class="header_logo">
                        <a href="{{ path('home_page') }}">FW</a>
                    </div>
                    <nav>
                        <ul>
                            <li><a href="{{ path('home_page') }}">Главная</a></li>
                            <li><a href="{{ path('add_video') }}">Добавить видео</a></li>
                            <li><a href="{{ path('app_video') }}">Мои видео</a></li>
                        </ul>
                    </nav>
                    <button class="green">Войти</button>
            {% endblock %}
        </header>
        <div class="center_block_main">

            <aside>
                {% block sidebar %}
                    <ul>
                        <li>
                            <a href="{{ path('add_video') }}">Добавить видео</a>
                        </li>
                        <li>
                            <a href="{{ path('add_category') }}">Добавить категорию</a>
                        </li>
                    </ul>
                {% endblock %}
            </aside>
            <main>
                {% block main_cont %}

                {% endblock %}
            </main>
        </div>
    </body>
    <footer>FOOTER</footer>
</html>
